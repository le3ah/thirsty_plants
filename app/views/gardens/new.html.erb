<div class="background_img"></div>

<h1>Create a New Garden</h1>
<div class="form_container">
<%= form_for @garden do |f| %>
  <%= render partial: "/errors/validations_failed" %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Garden Name", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :zip_code, placeholder: "Zip Code", class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <h2>Let's Get Your Garden Started with a Few Plants!</h2>
</div>
    <div class="form_container">
      <%= f.fields_for :plants do |plants_form| %>
          <div class="form-group">
          <%= plants_form.text_field :name, placeholder: "Plant Name", class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= plants_form.text_field :times_per_week, placeholder: "Weekly Plant Watering Requirements", class: 'form-control' %>
          </div>
      <% end %>
    <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
</div>
